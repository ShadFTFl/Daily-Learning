

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UserEntry</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("User Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("UserName")
                @Html.ValidationMessage("UserName")
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Password", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("Password")
                @Html.ValidationMessage("Password")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("User Type","UserTypeId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserTypeId", String.Empty)
                @Html.ValidationMessage("UserTypeId")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




